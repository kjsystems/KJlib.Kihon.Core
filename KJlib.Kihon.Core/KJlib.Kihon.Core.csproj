<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.33</Version>
    <PackageId>KJlib.Kihon.Core</PackageId>
    <Authors>KJ Systems, Inc.</Authors>
    <Company>KJ Systems, Inc.</Company>
    <Product>KJlib.Kihon.Core</Product>
    <AssemblyName>KJlib.Kihon.Core</AssemblyName>
    <RootNamespace>KJlib.Kihon.Core</RootNamespace>
    <RepositoryUrl>https://github.com/kjsystems/KJlib.Kihon.Core</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.1' ">
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.*" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net5.0' ">
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.*" />
  </ItemGroup>

</Project>
